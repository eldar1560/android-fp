<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fp.androidapp">

    <application
        android:name="com.example.fp.androidapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="StudentList"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.fp.androidapp.MainActivity" android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name="com.example.fp.androidapp.StudentsListActivity" android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.fp.androidapp.StudentDetailsActivity" android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity android:name="com.example.fp.androidapp.StudentEditActivity" android:configChanges="orientation|keyboardHidden|screenSize"></activity>
    </application>

</manifest>