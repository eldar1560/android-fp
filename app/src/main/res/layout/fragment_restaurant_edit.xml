<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fp.androidapp.RestaurantEditFragment"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stu_edit_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_margin="7dp"
            android:src="@drawable/avatar"/>

        <ProgressBar
            android:id="@+id/stu_edit_progressBar"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="70dp"
            android:visibility="gone"
            android:layout_height="70dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:gravity="center"
            android:text="Restaurant Name:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="7dp"/>

        <EditText
            android:id="@+id/editFoodNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="7dp"/>

        <EditText
            android:id="@+id/editUserNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Address:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="7dp"/>

        <EditText
            android:id="@+id/editAddressTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/editCbTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:focusable="false"
        android:layout_margin="20dp"
        android:text="delicious?"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order date:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="7dp"/>

        <com.example.fp.androidapp.MyDatePicker
            android:id="@+id/editOrderDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order time:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="7dp"/>

        <com.example.fp.androidapp.MyTimePicker
            android:id="@+id/editOrderTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editSaveBtn"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/editDeleteBtn"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/editCancelBtn"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>
